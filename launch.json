    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {
            "name": "Long Document Understanding",
            "type": "debugpy",
            "request": "launch",
            "program": "/root/kailin/long-document-understanding/main.py",
            "console": "integratedTerminal",
            "env": {"HF_ENDPOINT":"https://hf-mirror.com",
                    "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT":"10.0"},
            "justMyCode": false,
        },
        {
            "name": "MP-DocVQA Retrieval",
            "type": "debugpy",
            "request": "launch",
            "program": "/root/kailin/long-document-understanding/retrieval.py",
            "console": "integratedTerminal",
            "env": {"HF_ENDPOINT":"https://hf-mirror.com",
                    "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT":"10.0"},
            "justMyCode": false,
        }
    ]
}